{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mongo": true,
        "mocha": true
    },
	"globals":{
		"ENV": true
	},
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab", {
                "SwitchCase": 0
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-useless-escape": [0]
    }
}
